<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary_50"
    >
    <!--Background Menu Atas-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/backround_menu_atas"
        android:orientation="vertical">
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--Menu Atas-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu_atas"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/search"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:hint="Kolom Pencarian"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/envelope"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@drawable/transparent_background"
            android:src="@drawable/ic_envelope"
            app:tint="@color/white"
            app:layout_constraintStart_toEndOf="@+id/search_bar"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/notif_red"
            app:layout_constraintEnd_toEndOf="@id/envelope"
            app:layout_constraintStart_toEndOf="@id/envelope"
            app:layout_constraintTop_toTopOf="@id/envelope" />

        <ImageButton
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/transparent_background"
            android:src="@drawable/ic_notification"
            app:tint="@color/white"
            app:layout_constraintEnd_toStartOf="@id/chart_shopping"
            app:layout_constraintStart_toEndOf="@+id/envelope"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/notif_red"
            app:layout_constraintEnd_toEndOf="@id/notification"
            app:layout_constraintStart_toEndOf="@id/notification"
            app:layout_constraintTop_toTopOf="@id/notification" />

        <ImageButton
            android:id="@+id/chart_shopping"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:background="@drawable/transparent_background"
            android:src="@drawable/ic_shopping_cart"
            app:tint="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/menu"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/notif_red"
            app:layout_constraintEnd_toEndOf="@id/chart_shopping"
            app:layout_constraintStart_toEndOf="@id/chart_shopping"
            app:layout_constraintTop_toTopOf="@id/chart_shopping" />
        <ImageButton
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/transparent_background"
            android:src="@drawable/ic_menu"
            app:tint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="10dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/notification_red_second"
            app:layout_constraintEnd_toEndOf="@id/menu"
            app:layout_constraintStart_toEndOf="@id/menu"
            app:layout_constraintTop_toTopOf="@id/menu" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--Dikirim Ke-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/menu_atas"
        app:layout_constraintTop_toBottomOf="@id/menu_atas">
        <ImageButton
            android:id="@+id/placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_placeholder"
            android:background="@drawable/transparent_background"
            app:tint="@color/white"
            android:padding="8dp"
            />
        <TextView
            android:textColor="@color/white"
            android:id="@+id/send_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_to"
            app:layout_constraintBottom_toBottomOf="@+id/placeholder"
            app:layout_constraintStart_toEndOf="@+id/placeholder"
            app:layout_constraintTop_toTopOf="@+id/placeholder"

            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_down"
            android:tint="@color/white"
            android:background="@drawable/transparent_background"
            app:layout_constraintStart_toEndOf="@+id/send_to"
            app:layout_constraintBottom_toBottomOf="@id/send_to"
            app:layout_constraintTop_toTopOf="@id/send_to"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/member"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@drawable/payment"
        app:layout_constraintBottom_toBottomOf="@id/cs2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cs2">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>